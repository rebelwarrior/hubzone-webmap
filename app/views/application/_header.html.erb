<header class="usa-header usa-header-extended" role="banner">
  <!-- Gov banner BEGIN -->
  <div class="usa-banner">
      <header class="usa-banner-header">
        <div class="usa-grid usa-banner-inner">
        <%= image_tag("img/favicons/favicon-57.png", alt: "U.S. flag") %>
        <p><%= t('usa_banner.title') %></p>
        </div>
      </header>
  </div>
  <!-- Gov banner END -->
  <div class="usa-navbar">
    <button class="usa-menu-btn usa-button-outline" role="button" aria-label="Menu button">Menu</button>
    <div class="logo-stuff">
      <img alt="certify.SBA.gov logo" src="https://ussba.github.io/certify-prototype/assets/img/certify-sba-gov-logo_on-dark.png" width="275px">
      <div class="title">HUBZone Map</div>
    </div>
  </div>
  <nav role="navigation" class="usa-nav">
    <div class="usa-nav-inner">
      <button class="usa-nav-close">
        <%= image_tag("img/close.svg", alt: "close") %>
      </button>
      <div class="usa-nav-secondary">
        <ul class="usa-unstyled-list usa-nav-secondary-links">
          <li>
           <%= link_to( t('menu.help'),
           help_path,
           'aria-label': t('menu.help'),
           id: "map-help-guide",
           onclick: "HZApp.GA.openLink( '#{help_path}', 'map', 'help-link' );" ) %>
          </li>
          <li>
            <%= link_to( t('menu.hubzone_program'),
                         "https://www.sba.gov/contracting/government-contracting-programs/hubzone-program",
                         id: "hubzone-program-link",
                         'aria-label': t('menu.hubzone_program_aria_label'),
                         onclick: "HZApp.GA.openLink( 'https://www.sba.gov/contracting/government-contracting-programs/hubzone-program', 'map', 'program-link' );" ) %>
          </li>
          <li>
            <a href="http://localhost:3000/login">Sign in</a>

          </li>

        </ul>
      </div>
    </div>
  </nav>
</header>
